{
  "openapi": "3.1.0",
  "info": {
    "title": "CM5Markets API",
    "version": "1.0.0",
    "description": "API CM5Markets pour accéder aux comptes, trades et algorithmes via POST uniquement. Les requêtes utilisent des clés API et secret, et supportent les comptes Réel et Démo."
  },
  "servers": [
    {
      "url": "https://api.cm5-markets.com/v3"
    }
  ],
  "paths": {
    "/balance": {
      "post": {
        "summary": "Obtenir le solde du compte",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "api-key": "votre_cle_api_ici",
                "api-secret": "votre_cle_secrete_ici",
                "object": "solde",
                "get": "All"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Solde du compte retourné",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/trade-open": {
      "post": {
        "summary": "Obtenir les trades ouverts",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "api-key": "votre_cle_api_ici",
                "api-secret": "votre_cle_secrete_ici",
                "object": "trade",
                "limit": "All",
                "type": "Réel"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Liste des trades ouverts" }
        }
      }
    },
    "/pending-orders": {
      "post": {
        "summary": "Obtenir les ordres en attente",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "api-key": "votre_cle_api_ici",
                "api-secret": "votre_cle_secrete_ici",
                "object": "order",
                "limit": "All",
                "type": "Réel"
              }
            }
          }
        },
        "responses": { "200": { "description": "Liste des ordres en attente" } }
      }
    },
    "/trade-history": {
      "post": {
        "summary": "Obtenir l'historique des trades",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "api-key": "votre_cle_api_ici",
                "api-secret": "votre_cle_secrete_ici",
                "object": "trade",
                "limit": "100",
                "type": "Réel"
              }
            }
          }
        },
        "responses": { "200": { "description": "Historique des trades" } }
      }
    },
    "/algorithme": {
      "post": {
        "summary": "Actions algorithme (ouvrir, fermer, modifier positions)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "examples": {
                "Ouvrir une position": {
                  "value": {
                    "api-key": "votre_cle_api_ici",
                    "api-secret": "votre_cle_secrete_ici",
                    "object": "activation",
                    "type": "Réel",
                    "lot": 0.1,
                    "mode": "Buy",
                    "symbol": "EURUSD",
                    "tp": 1.0850,
                    "sl": 1.0750
                  }
                },
                "Fermer tous les perdants": {
                  "value": {
                    "api-key": "votre_cle_api_ici",
                    "api-secret": "votre_cle_secrete_ici",
                    "object": "close-advanced",
                    "type-close": "perte"
                  }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "Action exécutée avec succès" } }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "security": [
    { "bearerAuth": [] }
  ]
}
